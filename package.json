{
  "name": "@liedekef/ftable",
  "version": "1.1.3",
  "description": "Modern, lightweight, jQuery-free CRUD table for dynamic AJAX-powered tables.",
  "main": "ftable.js",
  "module": "ftable.esm.js",
  "types": "ftable.d.ts",
  "files": [
    "*.js",
    "ftable.d.ts",
    "themes/",
    "localization/",
    "extensions/",
    "CHANGES.md",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:esmumd && npm run build:min",
    "build:esmumd": "node build.mjs",
    "build:min": "uglifyjs ftable.js -o ftable.min.js --compress --mangle",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "table",
    "crud",
    "ajax",
    "vanilla-js",
    "ui",
    "grid",
    "form",
    "dynamic"
  ],
  "author": "Franky Van Liedekerke",
  "license": "MIT",
  "homepage": "https://github.com/liedekef/ftable#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/liedekef/ftable.git"
  },
  "bugs": {
    "url": "https://github.com/liedekef/ftable/issues"
  }
}
